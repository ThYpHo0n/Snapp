{
    "extends": "tslint:recommended",
    "rules": {
        "max-line-length": {
            "options": [140]
        },
        "new-parens": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-conditional-assignment": true,
        "no-consecutive-blank-lines": false,
        "no-console": false,
        "trailing-comma": false,
        "variable-name": false
    },
    "jsRules": {
        "max-line-length": {
            "options": [140]
        }
    }
}
